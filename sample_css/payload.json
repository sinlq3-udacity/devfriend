{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Sample CSS Code",
            "horizontalAlignment": "Center",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "id": "color",
            "isRequired": true,
            "isMultiline": false,
            "label": "Color",
            "value":"${color}"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Render",
            "data": {
                "$template_file":"/sample_css/sample.css",
                "$template_payload":"template_payload.json",
                "$language":"css",
                "color": "color"
            }
        }
    ]
}