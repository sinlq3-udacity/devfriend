{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Sample C# Code",
            "horizontalAlignment": "Center",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "id": "from",
            "isRequired": true,
            "isMultiline": false,
            "label": "Message",
            "value":"${from}"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "id": "to",
            "isRequired": true,
            "isMultiline": false,
            "label": "Message",
            "value":"${to}"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "id": "department",
            "isRequired": true,
            "isMultiline": false,
            "label": "Message",
            "value":"${department}"
        }
        ,{
            "type": "Input.Text",
            "style": "text",
            "id": "company",
            "isRequired": true,
            "isMultiline": false,
            "label": "Message",
            "value":"${company}"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Render",
            "data": {
                "$template_file":"./email_template/sample.txt",
                "$template_payload":"template_payload.json",
                "$language":"csharp",
                "from": "from",
                "to": "to",
                "department": "department",
                "company": "company"
            }
        }
    ]
}